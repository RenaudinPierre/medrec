<div class="card card-medicament" style="background-color: $gray;">
  <div class="form-medicament">

    <div class="form-inputs">
      <select class="api-card-drugs name-medicament" style="width: 100%">
        <option><%= drugName %></option>
      </select>
      <div class="inline-medicament">
        <label for="morning"></label>
        <input class="form-control" type="text" value="<%= drugMorning %>" id="drug_morning">
        <label for="lunch"></label>
        <input class="form-control" type="text" value="<%= drugLunch %>" id="drug_lunch">
        <label for="evening"></label>
        <input class="form-control" type="text" value="<%= drugEvening %>" id="drug_evening">
        <label for="nigth"></label>
        <input class="form-control" type="text" value="<%= drugNight %>" id="drug_night">
      </div>
      <textarea class="form-control" id="drug_comment" rows="1" placeholder="Commentaire..."></textarea>

    </div>
  </div>
</div>
