<div class="container container-board-show">
  <h3 class="name-board"><%= @board.name %></h3>
  <div class="row ">
    <% if @board.name == "Historique mÃ©dicamenteux" %>
      <div class="col-xs-9 padding-none print-none">
        <div class="board-container" data-id="<%= @board.id %>">
          <% @board.sources.each_with_index do |source, index| %>
            <% if source.final_source == false %>
              <div class="card-source" id="source_<%= index + 1 %>">
                <p><%= source.name %></p>
                <div class="card-source-invisible">
                  <% for p in (1..@board.height) %>
                    <div class="card-invisible" id="source_<%= index + 1 %>_card_<%= p %>">
                      <% if source.have_drug?(p) %>
                        <div class="card-medicament">
                          <%= render "shared/form_medicament", drug: source.find_drug(p) %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <%= link_to "+", "", class: "btn-add-medicament", id:"btn_source_#{index + 1}" %>
              </div>
            <% end %>
          <% end %>
        </div>
        <%= link_to "+", '', class: "btn-add-source" %>
      </div>
    <% else %>
      <div class="col-xs-6 padding-none">
        <div class="board-container" data-id="<%= @board.id %>">
          <% @board.sources.each_with_index do |source, index| %>
            <% if source.final_source == false %>
              <div class="card-source" id="source_<%= index + 1 %>">
                <p><%= source.name %></p>
                <div class="card-source-invisible">
                  <% for p in (1..@board.height) %>
                    <div class="card-invisible" id="source_<%= index + 1 %>_card_<%= p %>">
                      <% if source.have_drug?(p) %>
                        <div class="card-medicament">
                          <%= render "shared/form_medicament", drug: source.find_drug(p) %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <%= link_to "+", "", class: "btn-add-medicament", id:"btn_source_#{index + 1}" %>
              </div>
            <% end %>
          <% end %>
        </div>
        <%= link_to "+", '', class: "btn-add-source" %>
      </div>
      <div class="col-xs-3 padding-none">
        <div class="board-container-divergence">
          <div class="card-source" id="source_<%= @board.sources.length - 1 %>">
            <p><%= @board.divergence.name %></p>
            <div class="card-source-invisible">
              <% for p in (1..@board.height) %>
                <div class="card-invisible" id="source_<%= @board.sources.length - 1 %>_card_<%= p %>">
                  <% if @board.divergence.have_drug?(p) %>
                    <div class="card-medicament">
                      <%= render "shared/form_medicament", drug: @board.divergence.find_drug(p) %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
            <%= link_to "+", "", class: "btn-add-medicament", id:"btn_source_#{@board.sources.length }" %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-xs-3 padding-none">
      <div class="board-container-final">
        <div class="card-source-final" id="source_<%= @board.sources.length %>">
          <p><%= @board.final.name %></p>
          <div class="card-source-invisible">
            <% for p in (1..@board.height) %>
              <div class="card-invisible" id="source_<%= @board.sources.length %>_card_<%= p %>">
                <% if @board.final.have_drug?(p) %>
                  <div class="card-medicament">
                    <%= render "shared/form_medicament", drug: @board.final.find_drug(p) %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
          <%= link_to "+", "", class: "btn-add-medicament", id:"btn_source_#{@board.sources.length }" %>
        </div>
      </div>
      <div class="bouton-show">
        <a class='btn btn-treehouse-small generer-pdf fa fa-file-pdf-o' target="_blank" href="<%= board_print_path(@board) %>"></a>
        <i class="fa fa-floppy-o btn btn-treehouse-small generer-pdf" aria-hidden="true"></i>
        <%= link_to '', patients_path, class: 'btn btn-treehouse-small fa fa-sign-out generer-pdf' %>
      </div>
    </div>
  </div>



  <%= render "shared/form_divergence" %>


</div>
