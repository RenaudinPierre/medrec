<div class="form">
  <%= simple_form_for(@patient) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :last_name, label: 'Nom', class: "my-button" %>
      <%= f.input :first_name, label: 'Prénom', class: "my-button" %>
      <%= f.input :birthdate, as: :date, html5: true, label: 'Date de naissance' %>
      <%= f.input :entrancedate, as: :date, html5: true, label: 'Date entrée hospitalisation' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
