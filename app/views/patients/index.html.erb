<div class="container">

<h2>Mes patients</h2>


  <div class="row">
    <% @patients.each do |patient| %>
      <div class="col-xs-12 col-sm-3 card-patient">
          <div ><p id="bold"><%= patient.first_name %> <%= patient.last_name %></p></div>
          <div><p id="blue"><%= patient.birthdate %></p></div>
          <% patient.boards.each do |board| %>
              <p><%= link_to board.name, board %></p>
          <% end %>
      </div>
    <% end %>
  </div>
</div>





