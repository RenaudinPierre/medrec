<div class="container">
  <h2>Mes patients</h2>
  <%= form_tag patients_path, method: :get do %>
    <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a Patient"
      %>
  <% end %>
  <div class="row ">
      <% @patients.each do |patient| %>
        <div class="col-xs-12 col-sm-3 card-patient">
            <div ><p id="bold"><%= patient.first_name %> <%= patient.last_name %></p></div>
            <div><p id="blue"><%= patient.birthdate %></p></div>
            <% patient.boards.each do |board| %>
                <p><%= link_to board.name, board %></p>
            <% end %>
        </div>
      <% end %>
  </div>
</div>





